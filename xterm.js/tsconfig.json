{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015.Promise",
      "ES2015.Collection",
      "ES2015.Iterable"
    ],
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/addons/**/*"
  ]
}
