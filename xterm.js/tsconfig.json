{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "lib",
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/addons/**/*",
    "build",
    "demo",
    "dist",
    "out",
    "test",
    "node_modules",
    "docs"
  ]
}
