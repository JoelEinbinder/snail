{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise"
    ],
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "removeComments": true,
    "preserveWatchOutput": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "typings/xterm.d.ts"
  ],
  "exclude": [
    "src/addons/**/*"
  ]
}
